{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prConcurrentLimit": 3,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "UPDATE-MAJOR"
      ],
      "automerge": true
    }
  ],
  "baseBranches": [
    "master"
  ],
  "reviewers": [
    "ludofloria","wvsgnovize"
  ]
}

