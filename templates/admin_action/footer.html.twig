<div class="row">
    
    <div class="cell padded rw-2.5 rw-sm-12">
        <input type="text" id="input-search"></input>                       
    </div>
    <div class="cell padded ro-2.5 rw-1.5 rw-sm-12">
        <button id="confirm-search">{{ 'Akte'|trans({}, 'admin') }}</button>                  
    </div>
</div>
{% block js %}
    
    <script>
            var searchHandler = function(e) {
                if (e.type === 'keypress') {
                    if (e.keyCode !== 13) {                       
                        return;
                    }
                } 
                e.preventDefault();
                let target_payload = {                
                    name: document.getElementById('input-search').value,
                };
    
                $.ajax.easySend( '{{ path('admin_users_find') }}', target_payload,
                    function (data) {
                        $.ajax.load(null, data.url, true);
                    } )
            };
                         
            document.getElementById('confirm-search').addEventListener('click', searchHandler);   
            document.getElementById('input-search').addEventListener('keypress', searchHandler);          

    </script>
{% endblock %}