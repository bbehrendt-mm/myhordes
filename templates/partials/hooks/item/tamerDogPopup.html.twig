{% from 'ajax/game/partials/action_macros.html.twig' import inline_action_renderer %}

{% macro actionGroup(list, title, scout, target_for, help = null) %}
    {% if list is not empty %}
        <div class="relative">
            {{ title }}
            {% for entry in list %}
                <div>{{ inline_action_renderer( scout, [entry], target_for ~ '/' ) }}</div>
            {% endfor %}
            {% if help is not null %}
                <hordes-tooltip class="help">
                    {{ help }}
                </hordes-tooltip>
            {% endif %}
        </div>
    {% endif %}
{% endmacro %}

{{ _self.actionGroup( actions_bring, '{dogname}, "BRING"!'|trans({'dogname': app.user|dogname}, 'items'), scout, target_for,
    'Befiehlt {dogname}, deinen Rucksackinhalt in die Stadt zu bringen.'|trans({'dogname': app.user|dogname}, 'items') ~ ' ' ~
