{% extends "ajax/soul/shell.html.twig" %}
{% block title %}{{'Ranglisten der Saison'|trans({}, 'game')|raw}}{% endblock %}
{% block menu_text %}
    {{ parent() }}
{% endblock %}
{% block soul_content %}
    {# @var \src\Entity\Season currentSeason #}
    <div class="row">
        <div class="cell rw-12 seasonHeader">
            <span class="seasonName">
                {% if currentSeason is not null and not virtualSeason %}
                    {% if currentSeason.number > 0 %}
                        {{ ('Saison ' ~ currentSeason.number ~ '.' ~ currentSeason.subNumber)|trans({}, "season")}}
                    {% endif %}
                {% elseif not virtualSeason and soloType is not defined %}
                    {{'Alte Städte'|trans({}, "soul")}}
                {% elseif not virtualSeason and soloType is defined %}
                    {{'Alte Seelen'|trans({}, "soul")}}
                {% endif %}
            </span>
            <span class="seasonNumber">
                {% if virtualSeason %}
                    {{'ALLE SAISONS'|trans({}, "soul")}}
                {% else %}
                    {% if currentSeason is not null %}
                        {% if currentSeason.number > 0 %}
                            {% if currentSeason.subNumber > 0 %}
                                {% set curNumber = currentSeason.number ~ '.' ~ currentSeason.subNumber %}
                            {% else %}
                                {% set curNumber = currentSeason.number %}
                            {% endif %}
                            {{ 'Saison {number}'|trans({"{number}": '<span class="number">' ~ curNumber ~ '</span>'}, "soul")|raw}}
                        {% else %}
                            {{ '<span class="number">Beta</span> Saison'|trans({},'soul')|raw }}
                        {% endif %}
                    {% else %}
                        {{ 'Saison {number}'|trans({"{number}": '<span class="number">' ~ 0 ~ '</span>'}, "soul")|raw}}
                    {% endif %}
                {% endif %}
            </span>
        </div>
    </div>

    <div class="row season-ranking">
        <div class="cell rw-12">
            <ul class="type-list">
                {% for type in townTypes %}
                    <li x-ajax-sticky x-ajax-href="{{ path('soul_season', {'type': type.id, 'season': (currentSeason and not virtualSeason) ? currentSeason.id : (virtualSeason ? 'c' : 'a')}) }}" class="type {% if currentType and type.id == currentType.id %}selected{% endif %}" x-type-id="{{ type.id }}"><img src="{%if type.name == 'remote' %}{{ asset('build/images/pictos/r_surlst.gif') }}{% else %}{{ asset('build/images/towntypes/' ~ type.name ~ '.gif') }}{% endif %}" alt="" /> <span class="link soul_season_link">{{ type.label|trans({}, 'soul') }}</span></li>
                {% endfor %}
                <li x-ajax-sticky x-ajax-href="{{ path('soul_season_solo') }}" class="type {% if soloType is defined and soloType == 'soul' %}selected{% endif %}" x-type-id="soul"><img src="{{ asset('build/images/icons/small_ghost_red.gif') }}" alt="" /> <span class="link soul_season_link">{{ 'Seelenpunkte'|trans({}, 'soul') }}</span></li>
            </ul>
        </div>
        {% if currentType %}
            <div class="cell padded rw-12">
                {% if towns|length > 0 %}
                <div class="row-flex header">
                    <div class="cell padded rw-1 center">
                        {{'Lang.'|trans({}, 'soul')}}
                    </div>
                    <div class="cell padded rw-1 center">
                        {{'Pos.'|trans({}, 'soul')}}
                    </div>
                    <div class="cell padded rw-6 center">
                        {{'Stadt'|trans({}, 'game')}}
                    </div>
                    <div class="cell padded rw-2 center">
                        {{'Überlebte Tage'|trans({}, 'soul')}}
                    </div>
                    <div class="cell padded rw-2 center">
                        {{'Score'|trans({}, 'soul')}} <a class="help-button"><div class="tooltip help">{{ 'Dieser Zahl ist die Summe der überlebten Tagen aller Bürger in einer Stadt. Sie ist der Gradmesser für die Koordinations- und Kooperationsfähigkeit einer Stadt.'|trans({},'global') }}</div>{{ 'Hilfe'|trans({},'global') }}</a>
                    </div>
                </div>
                <div class="town-container">
                    {% set pos = 1 %}
                    {% for town in towns %}
                        <div class="row-flex stretch season_entry {% if pos is not odd %}even{% endif %} {% if played[town.id] is defined %}played{% endif %}">
                            {# @var town \src\Entity\TownRankingProxy #}
                            <div class="cell rw-1 season_entry_td center"><img src="{{ asset("build/images/lang/" ~ town.language ~".png") }}" alt="{{ town.language }}" /></div>
                            <div class="cell rw-1 season_entry_td center">{{ pos }}</div>
                            <div class="cell rw-6 season_entry_td left"><div class="inline-block"><img x-town-details="{{ town.id }}" x-town-toggle="{{ town.id }}" class="pointer" alt="+" src="{{ asset('build/images/icons/small_more.gif') }}" /><div class="tooltip help">{{ 'Die Liste der eingeschriebenen Spieler ansehen.'|trans({},'game') }}</div></div> {{ town.name }}</div>
                            <div class="cell rw-2 season_entry_td center" style="color: #f0d79e">{{ town.days }}</div>
                            <div class="cell rw-2 season_entry_td center"><strong>{{ town.score }}</strong></div>
                        </div>
                        {% if pos == 1 %}
                            <div class="row-flex stretch season_entry_container" x-town-latest="">
                                <div class="cell rw-1 center" style="border-right: 1px solid #7e4d2a;"></div>
                                <div class="cell rw-7 ro-1">
                                {% for denizen in town.citizens|sort((a,b) => b.day <=> a.day ?: b.end <=> a.end) %}
                                {% if denizen.day == town.days %}
                                    <a href="{{ path('soul_visit', {id: denizen.user.id}) }}"><b>{{ denizen.user.name }}</b></a> <span style="color: #f0d79e">({{ denizen.day }})</span>
                                {% endif %}
                                {% endfor %}
                                </div>
                                <div class="cell rw-4 center"></div>
                            </div>
                        {% endif %}
                        <div x-town-tohide="{{ town.id }}" class="row-flex stretch season_entry_container hidden" style="background-color: #5c2b20">
                            <div class="cell rw-1" style="border-right: 1px solid #7e4d2a;"></div>
                            <div class="cell rw-1"></div>
                            <div x-town-details="{{ town.id }}" class="cell rw-8">
                                <ul class="citizen-list">
                                    {% for denizen in town.citizens|sort((a,b) => b.day <=> a.day ?: b.end <=> a.end) %}
                                        {# @var denizen \App\Entity\CitizenRankingProxy #}
                                        <li class="row" style="border-bottom: 1px dashed #ddab76;{% if denizen.user.id == user.id %}background-color: #3b3249;{% endif %}">
                                            <div class="cell padded rw-4">
                                                {% if denizen.cod.ref == constant("App\\Entity\\CauseOfDeath::Vanished") %}
                                                    <div class="inline-block"><img src="{{ asset("build/images/death/outside.gif") }}" alt="" /> <div class="tooltip">{{ 'Draußen gestorben'|trans({}, 'soul') }}</div></div>
                                                {% else %}
                                                    <div class="inline-block"><img src="{{ asset("build/images/death/inside.gif") }}" alt="" /> <div class="tooltip">{{ 'In der Stadt gestorben'|trans({}, 'soul') }}</div></div>
                                                {% endif %}
                                                <a class="link username" href="{{ path('soul_visit', {id: denizen.user.id}) }}">{{ denizen.user.name }}</a>
                                            </div>
                                            <div class="cell padded rw-1" style="color:#f8eacb">{{ denizen.day }}</div>
                                            <div class="cell padded rw-4"><em>{{ denizen.lastWords|replace({'{gotKilled}': '...der Mörder .. ist.. IST.. AAARGHhh..'|trans({},'game')}) }}</em></div>
                                        </li>
                                    {% endfor %}
                                </ul>
                                <div class="right"><span class="small pointer" x-town-toggle="{{ town.id }}">{{ 'Schließen'|trans({},'global') }}</span></div>
                            </div>
                            <div class="cell rw-2"></div>
                        </div>
                        <!-- to compensate even/odd coloring (2 rows per town makes them all even and it's incorrect, so we need 3) -->
                        <!-- (also helps with a border issue) -->
                        <div class="row-flex stretch">
                        </div>
                        {% set pos = pos + 1 %}
                    {% endfor %}
                </div>
                {% else %}
                    <div class="note note-critical">{{ 'Es wurde noch keine Stadt in die Rangliste aufgenommen!'|trans({},'global') }}</div>
                {% endif %}
            </div>
        {% endif %}
        {% if soloType is defined %}
            <div class="cell rw-12">
                <div class="row season_access_text">{{'Zugriff auf die Rangliste einer bestimmten Saison:'|trans({}, 'soul')}}</div>
                <div class="row season_access_select">
                    <div class="cell rw-4">
                        <select name="season" id="season">
                            <option {% if (currentSeason == 'all') %}selected{% endif %} value="all">{{'Alle Saisons'|trans({}, "soul")}}</option>
                            <option {% if (currentSeason == 'myh') %}selected{% endif %} value="myh">{{'Alle Saisons auf MyHordes'|trans({}, "soul")}}</option>
                            {% for season in seasons %}
                                <option value="{{season.id}}" {% if currentSeason is not null and not virtualSeason and currentSeason == season %}selected{% endif %}>
                                    {% set got  = season.number == 0 and season.subnumber <= 14 %}
                                    {% set beta = season.number == 0 and not got %}
                                    {% if got %}{{ 'Gute Alte Zeit'|trans({},'soul') }} -{% endif %}
                                    {% if beta %}
                                        {{ 'Beta-Saison'|trans({},'soul') }}
                                    {% else %}
                                        {{ 'Saison {n}'|trans({'{n}': season.number > 0 ? season.number : season.subNumber},'soul') }} - {{ ('Saison ' ~ season.number ~ '.' ~ season.subNumber)|trans({}, "season")}}
                                    {% endif %}
                                </option>
                            {% endfor %}
                            <option value="a" {% if currentSeason == 'a' %}selected{% endif %}>{{'Alpha-Seelen'|trans({}, "soul")}}</option>
                        </select>
                    </div>
                    <div class="cell rw-8">
                    </div>
                </div>
            </div>
            <div class="cell padded rw-12">
                {% if ranking|length > 0 %}
                <div class="row-flex header">
                    <div class="cell padded rw-1 center">
                        {{'Lang.'|trans({}, 'soul')}}
                    </div>
                    <div class="cell padded rw-1 center">
                        {{'Pos.'|trans({}, 'soul')}}
                    </div>
                    <div class="cell padded rw-6 center">
                        {{'Spieler'|trans({}, 'soul')}}
                    </div>
                    <div class="cell padded rw-4 center">
                        {{'Seelenpunkte'|trans({}, 'soul')}}
                    </div>
                </div>
                <div class="town-container">
                    {% set pos = offset %}
                    {% for info in ranking %}
                        {% set player = info[0] %}
                        {% set points = info.allPoints %}
                        {% set pos = pos + 1 %}
                        <div class="row-flex stretch season_entry_solo{% if player.id == user.id %} played{% endif %}{% if pos <= 5 %} top5{% else %} top5plus{% endif %}">
                            <div class="cell rw-1 season_entry_td center soul_season_flag"><img src="{% if player.language %} {{ asset("build/images/lang/" ~ player.language ~".png") }} {% else %} {{ asset("build/images/lang/multi.png") }} {% endif %}" alt="{{ user.language }}" /></div>
                            <div class="cell rw-1 season_entry_td center">{{ pos }}</div>
                            <div class="cell rw-6 season_entry_td left soul_season_name"><a class="link" href="{{ path('soul_visit', {id: player.id}) }}">{{ player.name }}</a></div>
                            <div class="cell rw-4 season_entry_td center soul_season_points">{{ points }}</div>
                        </div>
                    {% endfor %}
                </div>
                {% else %}
                    <div class="note note-critical">{{ 'Es sind keine Spieler aufgelistet!'|trans({},'soul') }}</div> <!-- TODO: missing translation -->
                {% endif %}
            </div>
            {% if user_sp is defined and user_sp > 0 and user_rank is defined and user_rank > 0 %}
                <div class="cell padded rw-12">
                    <div class="row">
                        <div class="cell ro-4 rw-4">
                            <div class="note center">
                                <b>{{ 'Deine Platzierung'|trans({},'global') }}</b><br/>
                                <span>{{ '{num} Seelenpunkte, Platz {rank}'|trans({'num': '<b>' ~ user_sp ~ '</b>', 'rank': '<b>' ~ user_rank ~ '</b>'},'global')|raw }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    </div>
    {% if seasons|length > 0 and soloType is not defined %}
     <div class="row">
        <div class="padded cell rw-12">
            <div class="note">
                <label for="season">
                    {{ 'Vorangegangene Saisons:'|trans({}, 'soul') }}
                </label>
                <select name="season" id="season">
                    {% for season in seasons %}
                        <option value="{{season.id}}" {% if currentSeason is not null and currentSeason == season %}selected{% endif %}>
                            {% set got  = season.number == 0 and season.subnumber <= 14 %}
                            {% set beta = season.number == 0 and not got %}
                            {% if got %}{{ 'Gute Alte Zeit'|trans({},'soul') }} -{% endif %}
                            {% if beta %}
                                {{ 'Beta-Saison'|trans({},'soul') }}
                            {% else %}
                                {{ 'Saison {n}'|trans({'{n}': season.number > 0 ? season.number : season.subNumber},'soul') }} - {{ ('Saison ' ~ season.number ~ '.' ~ season.subNumber)|trans({}, "season")}}
                            {% endif %}
                        </option>
                    {% endfor %}
                    <option value="a" {% if currentSeason is null %}selected{% endif %}>{{'Alte Städte'|trans({}, "soul")}}</option>
                </select>
            </div>
        </div>
    </div>
    {% endif %}
    {% if soloType is not defined %}
        <div class="help">
            <strong>{{'Die blau markierten Felder sind Städte, in denen du mitgespielt hast!'|trans({}, 'game')}}</strong>
            {{'Die Ranglisten aktualisieren sich jeden Tag nach dem mitternächtlichen Angriff.'|trans({}, 'game')}}<br />
            {{ help_lnk('Ranglisten und Saisons'|trans({}, 'help'), 'help', {'name': 'seasons_and_rankings'}) }}
        </div>
    {% elseif (pages > 1) %}
        <div class="row-flex">
            <div class="padded cell left" {% if page <= 1 %}disabled{% endif %}>
                <img alt="<<" src="{{ asset('build/images/icons/small_prev.gif') }}" />
                <a href="#" x-ajax-sticky x-ajax-href="{{ path('soul_season_solo', {page: 1, season: virtualSeason ? currentSeason : (currentSeason ? currentSeason.id : 'c')}) }}">{{ 'Anfang'|trans({},'global') }}</a>
            </div>
            <div class="padded cell left" {% if page <= 1 %}disabled{% endif %}>
                <img alt="<" src="{{ asset('build/images/icons/small_prev.gif') }}" />
                <a href="#" x-ajax-sticky x-ajax-href="{{ path('soul_season_solo', {page: page - 1, season: virtualSeason ? currentSeason : (currentSeason ? currentSeason.id : 'c')}) }}">{{ 'Vorh.'|trans({},'global') }}</a>
            </div>
            <div class="padded cell grow-1 center">
                <label><select id="pagination" class="small">
                    {% for p in 1..pages %}
                        <option value="{{ path('soul_season_solo', {page: p, season: virtualSeason ? currentSeason : (currentSeason ? currentSeason.id : 'c')}) }}" {% if p == page %}selected{% endif %}>{{ 'Seite {page}'|trans({page: p},'global') }}</option>
                    {% endfor %}
                </select></label>
            </div>
            <div class="padded cell right" {% if page >= pages %}disabled{% endif %}>
                <a href="#" x-ajax-sticky x-ajax-href="{{ path('soul_season_solo', {page: page + 1, season: virtualSeason ? currentSeason : (currentSeason ? currentSeason.id : 'c')}) }}">{{ 'Folg.'|trans({},'global') }}</a>
                <img alt=">" src="{{ asset('build/images/icons/small_next.gif') }}" />
            </div>
            <div class="padded cell right" {% if page >= pages %}disabled{% endif %}>
                <a href="#" x-ajax-sticky x-ajax-href="{{ path('soul_season_solo', {page: pages, season: virtualSeason ? currentSeason : (currentSeason ? currentSeason.id : 'c')}) }}">{{ 'Ende'|trans({},'global') }}</a>
                <img alt=">" src="{{ asset('build/images/icons/small_next.gif') }}" />
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block js %}
    {{ parent() }}
    <script>
        let season = document.getElementById("season");
        {% if soloType is defined %}
            if(season) season.addEventListener("change", function(){
                $.ajax.load(null, '{{ path("soul_season_solo") }}', true, {'season': season.value});
            })
        {% else %}
            if(season) season.addEventListener("change", function(){
                $.ajax.load(null, '{{ path("soul_season", {'type': currentType.id}) }}', true, {'season': season.value});
            })
        {% endif %}

        $.html.addEventListenerAll('#pagination', 'change', (e,elem) => {
            $.ajax.load(null, elem.value, true, {'season': season.value});
        } )

        $.html.addEventListenerAll( '[x-town-toggle]', 'click', function(e,elem) {
            const id = elem.getAttribute('x-town-toggle');
            document.querySelectorAll('[x-town-tohide="' + id + '"]').forEach(function( target ) {
                if (target.classList.contains('hidden')) target.classList.remove('hidden');
                else target.classList.add('hidden');
                // todo: hide other town lists when selecting a new one ? hordes works this way
            })
            document.querySelectorAll('[x-town-latest=""]').forEach(function( target ) {
                if (!target.classList.contains('hidden')) target.classList.add('hidden');
                // opening and closing a town won't restore the x-town-latest, but not a problem imo ! 
                // allows to display the rankings without it which is good
            })
        } );
    </script>
{% endblock %}