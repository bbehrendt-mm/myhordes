{% extends "ajax/soul/shell.html.twig" %}
{% block soul_content %}
    <div class="row skills">
        <div class="cell rw-12 center">
            <div class="bar">
                <div class="progresstext">{{progress|round}}%</div>
                <div class="progressbar left">
                    <img src="{{ asset('build/images/soul/heroUp_bar.gif') }}" style="width : {{progress}}%;" />
                </div>
            </div>
        </div>
        <div class="cell padded rw-4 ro-4 heroProgress">
            {{'Du hast bisher:'|trans({}, 'game')}} <strong>{{"%days% Tage"|trans({'%days%': app.user.heroDaysSpent}, "game")}}</strong>{{'im Heldenmodus gespielt'|trans({}, 'game')}}
        </div>
    </div>
    <div class="skills-history">
        <div class="row header">
            <div class="cell padded rw-4 center">
                {{'Fähigkeit'|trans({}, 'game')}}
            </div>
            <div class="cell padded rw-8 center">
                {{'Beschreibung'|trans({}, 'game')}}
            </div>
        </div>
        <div class="skills-container">
            {% for heroSkill in skills %}
            <div class="row {% if heroSkill == latestSkill.prototype %}currentSkill{% endif %}">
                <div class="cell padded rw-4 center">
                    {% if heroSkill.daysNeeded <= app.user.heroDaysSpent %}
                        <img src="{{ asset('build/images/heroskill/'~heroSkill.icon~".gif") }}" /><strong>{{heroSkill.title|trans({}, 'game')}}</strong>
                    {% elseif heroSkill == nextSkill %}
                        <span class="small">{{'Nächste:'|trans({}, 'game')}}<br /><strong>{{heroSkill.title|trans({}, 'game')}}</strong></span>
                    {% else %}
                        <span class="small">???</span>
                    {% endif %}
                </div>
                <div class="cell padded rw-8 desc">
                    {% if heroSkill.daysNeeded <= app.user.heroDaysSpent %}
                        <span>{{heroSkill.description|trans({}, 'game')}}</span>
                    {% else %}
                        <span class="small">{{'Diese Fähigkeit wurde noch nicht freigeschaltet...'|trans({}, 'game')}}</span>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}