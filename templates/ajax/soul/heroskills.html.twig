{% extends "ajax/soul/shell.html.twig" %}
{% block soul_content %}
    <div class="row skills">
        <div class="row skillBack">
            <label style="position: relative" class="button" x-ajax-href="{{ path('soul_me') }}">
                {{'Komm zur체ck zu meiner Seele'|trans({}, 'game')}}
            </label>
        </div>
        <div class="cell rw-12 center">
            <div class="bar">
                <div class="progresstext"><span class="text">{{progress|round}}%</span></div>
                <div class="progressbar left">
                    <img src="{{ asset('build/images/soul/heroUp_bar.gif') }}" style="width : {{progress}}%;" />
                </div>
            </div>
        </div>
        <div class="cell padded rw-4 ro-4 heroProgress">
            {{'Du hast bisher:'|trans({}, 'game')}} <strong>{{"%days% Tage"|trans({'%days%': app.user.allHeroDaysSpent}, "game")}}</strong>{{'im Heldenmodus gespielt'|trans({}, 'game')}}
        </div>
    </div>
    <div class="skills-history">
        <div class="row header">
            <div class="cell padded rw-4 center">
                {{'F채higkeit'|trans({}, 'game')}}
            </div>
            <div class="cell padded rw-8 center">
                {{'Beschreibung'|trans({}, 'game')}}
            </div>
        </div>
        <div class="skills-container">
            {% for heroSkill in skills %}
            <div class="row skillRow {% if heroSkill == latestSkill %}currentSkill{% endif %}">
                <div class="cell padded rw-4 center skill">
                    {% if heroSkill.daysNeeded <= app.user.allHeroDaysSpent %}
                        <img src="{{ asset('build/images/heroskill/'~heroSkill.icon~".gif") }}" /> <strong>{{heroSkill.title|trans({}, 'game')}}</strong>
                    {% elseif heroSkill == nextSkill %}
                        <span class="small">{{'N채chste:'|trans({}, 'game')}}<br /><strong>{{heroSkill.title|trans({}, 'game')}}</strong></span>
                    {% else %}
                        <span class="small">???</span>
                    {% endif %}
                </div>
                <div class="cell padded rw-8 desc">
                    {% if heroSkill.daysNeeded <= app.user.allHeroDaysSpent %}
                        <span>{{heroSkill.description|trans({}, 'game')}}</span>
                    {% else %}
                        <span class="small">{{'Diese F채higkeit wurde noch nicht freigeschaltet...'|trans({}, 'game')}}</span>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}