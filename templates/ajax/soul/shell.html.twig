{% extends "ajax/ajax.html.twig" %}
{% block menu_text %}
    {{ parent() }}
{% endblock %}
{% block ajax %}
    <div class="row soul">
        <div class="cell header rw-10 ro-1 rw-md-12 ro-md-0">
            <div class="row tabs tabs-desktop">
                <div class="cell-small soulNameDiv">
                    {% if app.user.avatar %}
                        <div class="avatar small"><img alt="" src="{{ path('app_web_avatar', {'uid': app.user.id, 'name': app.user.avatar.smallName, 'ext': app.user.avatar.format}) }}"></div>
                    {% endif %}
                    <h4 class="soul-name">
                        <img src="{{ asset('build/images/small_ghost_red.gif') }}" alt="{{'Held'|trans({}, 'game')}}" /> {{ app.user.username }}
                    </h4>
                </div>
                <div class="cell tab">
                    <a class="tab-link" target="_self" href="{{ path('auto_logout') }}"><img src="{{ asset('build/images/small_exit.gif') }}" /> {% trans from 'soul' %}Logout{% endtrans %}</a>
                </div>
                <div class="cell-small tab{% if soul_tab == "soul_settings" %} selected{% endif %}">
                    <div class="tab-link" x-ajax-href="{{ path('soul_settings') }}">{% trans from 'soul' %}Einstellungen{% endtrans %}</div>
                </div>
                <div class="cell-small tab{% if soul_tab == "soul_rps" %} selected{% endif %}">
                    <div class="tab-link" x-ajax-href="{{ path('soul_rps') }}"><img src="{{ asset('build/images/small_rp.gif') }}" /> {% trans from 'soul' %}Schriften{% endtrans %}</div>
                </div>
                <div class="cell-small tab{% if soul_tab == "soul_news" %} selected{% endif %}">
                    <div class="tab-link" x-ajax-href="{{ path('soul_news') }}"><img src="{{ asset('build/images/small_world.gif') }}" /> {% trans from 'soul' %}News{% endtrans %}</div>
                </div>
                <div class="cell-small tab{% if soul_tab == "soul_me" %} selected{% endif %}">
                    <div class="tab-link" x-ajax-href="{{ path('soul_me') }}">{% trans from 'soul' %}Seele{% endtrans %}</div>
                </div>
            </div>
            {% block soul_content %}
            {% endblock %}
        </div>
    </div>
{% endblock %}