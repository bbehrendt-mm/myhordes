                                    <option value="small">{{ 'Klein'|trans({}, 'soul') }}</option>
                                    <option value="normal">{{ 'Normal'|trans({}, 'soul') }}</option>
                                    <option value="large">{{ 'Gross'|trans({}, 'soul') }}</option>
                                    <option value="very-large">{{ 'Sehr gross'|trans({}, 'soul') }}</option>
