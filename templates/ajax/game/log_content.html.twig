{# @var entries \App\Entity\TownLogEntry[] #}
{% if entries|length == 0 %}
    <i>{{ 'Heute ist nichts Erw√§hnenswertes passiert...'|trans({},'game') }}</i>
{% else %}
    {% for entry in entries %}
        <div class="log-entry log-entry-type-{{ entry['template'].type }} log-entry-class-{{ entry['template'].class }}">
            <span class="log-part-time">{{ entry['entry'].timestamp.format('G:i') }}</span>
            <span class="log-part-content">{{ entry.text|raw }}</span>
        </div>
    {% endfor %}
{% endif %}