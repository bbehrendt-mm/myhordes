            $.html.forEach( '[data-building-parents]', e => e.removeAttribute('disabled') );
            disabled.forEach( d => $.html.forEach('[data-building-parents~="' + d + '"]', e => e.setAttribute('disabled','1')) );
        }

        );

        $.html.addEventListenerAll('#create-town-btn', 'click', function(){
            if (!confirm('{{ 'Bestätigen?'|trans({},'global')|e('js') }}'))
                return;

            let payload = {reserved_slots: []};
            $.html.forEach('#save-spots-container>[x-soul-id]', elem => payload.reserved_slots.push( parseInt(elem.getAttribute('x-soul-id')) ));

            const setting = (obj, key, value) => {
                if (typeof key == 'string') return setting(obj, key.split('.'), value);
                else if ( key.length === 1 ) {
                    if (value === '_discard') return delete obj[key[0]];
                    else return obj[key[0]] = value;
                }
                else if ( key.length === 0 ) return obj;
                else {
                    if (typeof obj[key[0]] !== "object") obj[key[0]] = {};
                    return setting( obj[key[0]], key.slice(1), value);
                }
            }

            const setting_resolve = ( elem, value ) => {
                if (elem.closest('[disabled]')) return;

                if (typeof value === "undefined") {
                    if(elem.type === "checkbox") value = elem.checked;
                    else if(elem.value === 'on') value = true;
                    else if(elem.value === 'off') value = false;
                    else value = elem.value;
                }

                setting( payload, elem.getAttribute('x-payload'), value );
            }

            $.html.forEach('input[type=checkbox][x-payload]', elem => setting_resolve( elem ) );
            $.html.forEach('input[type=radio][x-payload]', elem => { if (elem.checked && elem.value !== '_discard') setting_resolve( elem, elem.value ) } );
            $.html.forEach('select[x-payload][multiple]', elem => {
                const string = elem.getAttribute('x-payload');
                let options = [];
                $.html.forEach('option:checked', option => options.push( option.value ), elem);
                setting_resolve( elem, options);
            } );
            $.html.forEach('input:not([type=checkbox]):not([type=radio])[x-payload],textarea[x-payload],select[x-payload]:not([multiple])', elem => setting_resolve( elem ) );

            $.html.forEach('input[type="checkbox"][data-enables]:not(:checked)', elem => setting(payload, elem.dataset.enables, '_discard') );
            $.html.forEach('input[type="checkbox"][data-disables]:checked', elem => setting(payload, elem.dataset.disables, '_discard') );

            $.html.addEventListenerAll('input[type="checkbox"][data-disables]', 'change', (ev,elem) =>
                $.html.forEach( '[data-provides="' + elem.dataset.enabled + '"]', e => e.classList.toggle('hidden', elem.checked) )
            );

