                let helpTxt = "";
                let options = elem.querySelectorAll('option:checked');
                for(let i = 0 ; i < options.length ; i++) {
                    if (helpTxt !== "") helpTxt += "<br />";
                    if(elem.hasAttribute('multiple')) helpTxt += "<strong>" + options[i].innerText + "</strong> : ";
                    helpTxt += options[i].getAttribute('title');
                }
                document.getElementById(help_id).innerHTML = helpTxt;
                if (typeof f === 'function') f(elem.value);
            }, true);
        }

