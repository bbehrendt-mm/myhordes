                            {{ 'Twinoid-Konto'|trans({}, 'admin') }}
                        </div>
                        <div class="cell padded rw-3 rw-sm-12">
                            {% if user.twinoidID is not null %}
                                <img alt="" src="{{ asset('build/images/icons/link-external.gif') }}" /> <a target="_blank" href="https://eternaltwin.org/api/v1/archive/twinoid/users/{{ user.twinoidID }}">{{ user.twinoidID }}</a><br />
